doctype html
html(lang='en', xmlns='http://www.w3.org/1999/html')
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1, user-scalable=no')
        meta(name='description', content='Home page')
        meta(name='author', content='Stary')
        title Blog Home - Stary's blog.

        // javascript
        script(type='text/javascript', src='/javascripts/Angular.js')
        script(src='/javascripts/jquery.js')
        script(src='/JqueryUI/jquery-ui.js')
        script(src='/javascripts/bootstrap.min.js')

        block javascripts

        // CSS
        link(href='/stylesheets/bootstrap.min.css', rel='stylesheet')
        link(href='/JqueryUI/jquery-ui.css', rel='stylesheet')

        block stylesheets

    body
        // Navigation
        nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
            .container
                // Brand and toggle get grouped for better mobile display
                .navbar-header
                    button.navbar-toggle(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href='./home.html') Heartbeat
                // Collect the nav links, forms, and other content for toggling
                #bs-example-navbar-collapse-1.collapse.navbar-collapse
                    ul.nav.navbar-nav
                        - if (!hasSignIn)
                            li
                                a(href='./signIn.html') Log In
                        - else
                            li
                                a(href='#') Log Out
                        li
                            a(href='./writeArticle.html') Write Article

        block contents


        // Blog Sidebar Widgets Column
        .col-md-4
            .well
                h4 Blog Search
                .input-group
                    input#search.form-control(type='text')
                    span.input-group-btn
                        button.btn.btn-default(type='button', ng-click='submitSearch()')
                            span.glyphicon.glyphicon-search
            .well
                h4 Categories
                .row
                    .col-lg-6
                        ul.list-unstyled
                            li
                                a(href='#') C++
                    // /.col-lg-6
                    .col-lg-6
                        ul.list-unstyled
                            li
                                a(href='#') Java
                    // /.col-lg-6
                // /.row
            .well
                h4 Latest Information
                p(ng-bind='publishMessage') Welcome to Stary's blog.
                button.btn.btn-info(data-toggle='modal', data-target='#editModal')
                    span.glyphicon.glyphicon-adjust
                    |  Edit
            #editModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
                .modal-dialog
                    .modal-content
                        .modal-header
                            button.close(type='button', data-dismiss='modal')
                                span(aria-hidden='true') ×
                                span.sr-only Close
                            h4.modal-title Publish latest infomation.
                        .modal-body
                            form.jumbotron
                                .input-group
                                    span.input-group-addon Message
                                    input.form-control(type='text', placeholder='Message', ng-model='message', required='')
                        .modal-footer
                            button.btn.btn-default(type='button', data-dismiss='modal') Close
                            button.btn.btn-success(type='submit', ng-click='saveInformation()') Save

        // Footer
        footer
            .row
                .col-lg-12
                    p Copyright © Stary 2016
        style.
            footer {
                margin: 10px;
                text-align: center;
            }